class Solution:
    def peakIndexInMountainArray(self, arr):
        left, right = 0, len(arr) - 1

        while left < right:
            mid = (left + right) // 2
            if arr[mid] < arr[mid + 1]:
                left = mid + 1  # Peak is to the right
            else:
                right = mid  # Peak is at mid or to the left

        return left  # or right, since left == right